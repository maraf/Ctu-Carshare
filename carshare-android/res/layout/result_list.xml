<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/resultListImageView"
        style="@style/logo" />

    <TextView
        android:id="@+id/resultListTextView0"
        style="@style/nadpis"
        android:text="RESULT LIST" />

    <HorizontalScrollView
        android:id="@+id/resultListHorizontalScrollView"
        android:layout_width="wrap_content"
       	android:layout_height="match_parent"
       	android:layout_gravity="center_horizontal"
       	android:layout_marginBottom="60dp">
      
      	<LinearLayout
			android:id="@+id/resultListLinearLayout0"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">
      		
       		<LinearLayout
				android:id="@+id/resultListLinearLayout1"
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
    
    			<TextView 
        			android:id="@+id/resultListFrom"
        			android:layout_height="wrap_content" 
        			android:layout_width="100px" 
        			android:background="#AAFFFF99"
        			android:text="From"
        			style="@style/data_grid_text" /> 
        
    			<TextView 
        			android:id="@+id/resultListTo"
        			android:layout_height="wrap_content" 
        			android:layout_width="100px" 
        			android:background="#AAFFFF99"
        			android:text="To"
       				style="@style/data_grid_text" /> 
        
    			<TextView 
        			android:id="@+id/resultListDeparture"
        			android:layout_height="wrap_content" 
        			android:layout_width="100px" 
        			android:background="#AAFFFF99"
        			android:text="Departure"
       				style="@style/data_grid_text"/> 
        
    			<TextView 
        			android:id="@+id/resultListArrival"
        			android:layout_height="wrap_content" 
        			android:layout_width="100px" 
        			android:background="#AAFFFF99"
        			android:text="Arrival"
        			style="@style/data_grid_text" /> 
    
    			<TextView 
        			android:id="@+id/resultListTotalPrice"
        			android:layout_height="wrap_content" 
        			android:layout_width="100px" 
        			android:background="#AAFFFF99"
        			android:text="Total price"
        			style="@style/data_grid_text" /> 
   

    			<TextView
        			android:id="@+id/resultListAvailableSeats"
        			android:layout_height="wrap_content"
        			android:layout_width="100px"
        			android:background="#AAFFFF99"
        			android:text="Available seats"
        			style="@style/data_grid_text" />
                 
    			<TextView
        			android:id="@+id/resultListTotalSeats"
        			android:layout_height="wrap_content" 
        			android:layout_width="100px" 
        			android:background="#AAFFFF99"
        			android:text="Total seats"
        			style="@style/data_grid_text"/> 
        			
    			<TextView
        			android:id="@+id/resultListDriverRating"
        			android:layout_height="wrap_content" 
        			android:layout_width="100px" 
        			android:background="#AAFFFF99"
        			android:text="Driver rating"
        			style="@style/data_grid_text"/> 
			</LinearLayout> 
    		<ListView       
        		android:id="@+id/resultListListView"     
        		android:layout_width="match_parent"      
        		android:layout_height="match_parent"
        		android:divider="#ffffff" />   
        </LinearLayout>
    </HorizontalScrollView>
   
    <LinearLayout
        android:id="@+id/resultListLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:gravity="center_horizontal" >
        <Button
        android:id="@+id/resultListNewSearchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New search"
        android:textStyle="bold" />
        <Button
        android:id="@+id/resultListCencelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textStyle="bold" />
    </LinearLayout>
        
</LinearLayout>