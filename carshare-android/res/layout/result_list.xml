<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/resultListImageView"
        style="@style/logo" />

    <TextView
        android:id="@+id/resultListTextView0"
        style="@style/nadpis"
        android:text="RESULT LIST" />

    <HorizontalScrollView
        android:id="@+id/resultListHorizontalScrollView"
        android:layout_width="match_parent"
       	android:layout_height="match_parent"
       	android:layout_marginBottom="60dp">
 
      
    	<ListView       
        	android:id="@+id/resultListListView"     
        	android:layout_width="match_parent"      
        	android:layout_height="match_parent" 
        	android:divider="#ffffff"
        	android:headerDividersEnabled="true"
        	/>   
        	  
        	
    </HorizontalScrollView>
   
    <LinearLayout
        android:id="@+id/resultListLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:gravity="center_horizontal" >
        <Button
        android:id="@+id/resultListNewSearchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New search"
        android:textStyle="bold" />
        <Button
        android:id="@+id/resultListCencelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cencel"
        android:textStyle="bold" />
    </LinearLayout>
        
</LinearLayout>